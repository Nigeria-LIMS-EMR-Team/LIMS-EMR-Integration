{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "The Root Schema",
    "description": "The root schema comprises the entire JSON document.",
    "required": [
        "manifestID",
        "receivingFacilityID",
        "sendingPCRLab",
        "testType",
        "viralLoadTestReport"
    ],
    "properties": {
        "manifestID": {
            "type": "string",
            "minLength": 10,
            "maxLength": 10,
            "description": "The manifest ID of the returned result"
        },
        "receivingFacilityID": {
            "type": "string",
            "minLength": 10,
            "maxLength": 20
        },
        "sendingPCRLab": {
            "type": "string",
            "minLength": 10,
            "maxLength": 30,
            "description": "The identifier (e.g LIMS ID) of the PCR lab returning these results"
        },
        "testType": {
            "type":"integer",
            "description": "The type of test result(s) being returned",
            "minimum": 1,
            "maximum": 2,
            "enum": [1, 2]
        },
        "viralLoadTestReport": {
            "type": "array",
            "minItems": 1,
            "description": "The object containing a list of results, each item a result for a samples in that batch",
            "items": {
                "type": "object",
                "title": "",
                "description": "",
                "required": [
                    "patientID",
                    "sampleID",
                    "pcrLabSampleNumber",
                    "visitDate",
                    "dateSampleReceivedAtPCRLab",
                    "testResult",
                    "resultDate",
                    "assayDate",
                    "approvalDate",
                    "dateResultDispatched",
                    "sampleStatus",
                    "sampleTestable"
                ],
                "properties": {
                    "patientID": {
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "items": [
                            {
                                "type": "object",
                                "properties": {
                                    "idNumber": {
                                        "type": "string",
                                        "minLength": 10,
                                        "maxLength": 10
                                    },
                                    "idTypeCode": {
                                        "type": "string",
                                        "minLength": 6,
                                        "maxLength": 15,
                                        "enum": [
                                            "HOSPITALNO",
                                            "RECENCY",
                                            "CLIENTID"
                                        ]
                                    }
                                },
                                "required": [
                                    "idNumber",
                                    "idTypeCode"
                                ]
                            }
                        ]
                    },
                    "sampleID": {
                        "type": "string",
                        "minLength": 10,
                        "maxLength": 20,
                        "description": "The registration number of the sample i.e Sample ID"
                    },
                    "pcrLabSampleNumber": {
                        "type": "string",
                        "minLength": 10,
                        "maxLength": 20,
                        "description": "The sample number of this sample as assigned in the PCR lab"
                    },
                    "visitDate": {
                        "type": "string",
                        "description": "Visit Date",
                        "format": "date"
                    },
                    "dateSampleReceivedAtPCRLab": {
                        "type": "string",
                        "description": "The date the  sample was received at the PCR lab",
                        "format": "date"
                    },
                    "testResult": {
                        "type": "string",
                        "description": "Actual Test Result, specifying the VL detection value from the PCR machine"
                    },
                    "resultDate": {
                        "type": "string",
                        "description": "Result date",
                        "format": "date"
                    },
                    "assayDate": {
                        "type": "string",
                        "description": "The date the sample was actually tested",
                        "format": "date"
                    },
                    "approvalDate": {
                        "type": "string",
                        "description": "The date the result was approved",
                        "format": "date"
                    },
                    "dateResultDispatched": {
                        "type": "string",
                        "description": "The date the EMR pulled the result from LIMS. ",
                        "format": "date"
                    },
                    "sampleStatus": {
                        "type": "integer",
                        "description": "A status code specifying the state of the sample",
                        "minimum": 1,
                        "maximum": 4,
                        "default": 3,
                        "enum": [
                            1,
                            2,
                            3,
                            4
                        ]
                    },
                    "sampleTestable": {
                        "type": "boolean",
                        "description": "A field specifying if the sample is valid or rejected"
                    }
                }
            }
        }
    }
}